<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.ListDepartamentoView"
    android:padding="16dp">
    
    <TextView
        android:id="@+id/tvDepartamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textAllCaps="true"
        android:textColor="@color/black"/>
    
    <ListView
        android:id="@+id/lvDepartamento"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:divider="@color/buttonColor"
        android:dividerHeight="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDepartamento"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btnAgregarDepto"
        android:layout_marginHorizontal="16dp"
        style="@style/ButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lvDepartamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/btnDepartamento"
        android:layout_marginTop="32dp"/>


        
    

</androidx.constraintlayout.widget.ConstraintLayout>